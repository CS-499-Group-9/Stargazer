{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": 
      [
        {
          "src": "../",
          "files": [
            "DataLayer/*.csproj",
            "Stargazer-Godot/*.csproj"
          ]
        }
      ],
      "includePrivateMembers":true,
      "output": "api",
      "filter":"filterconfig.yml",
      "properties": 
      {
        "TargetFramework":"net6.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Stargazer Data API",
      "_appTitle": "Stargazer Data API",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
